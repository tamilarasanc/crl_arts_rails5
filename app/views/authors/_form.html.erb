<div class="container">

    <%= form_for @author ,html: {class: "form-horizontal"} do |f| %>

      <div class="form-group">
      <% if @author.errors.any? %>
          <div class="alert alert-danger fade in col-sm-4">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <h6>
              <strong>Danger!</strong> <%= pluralize(@author.errors.count, "error") %> prohibited
              this article from being saved:
            </h6>
            <ul>
              <% @author.errors.full_messages.each do |msg| %>
                  <h6><li><%= msg %></li></h6>
              <% end %>
            </ul>
          </div>
      <% end %>
      </div>
    <div class="form-group">
      <div class="col-sm-12">
       <div class="col-sm-6">
      <h4><label class="control-label col-sm-4" for="name">First name :</label></h4>
      <div class="col-sm-8 col-xs-12">
        <%= f.text_field :firstname ,class:"form-control"%>
      </div>
    </div>
      <div class="col-sm-6" >
      <h4><label class="control-label col-sm-4" for="name">Last Name :</label></h4>
      <div class="col-sm-8 col-xs-12">
        <%= f.text_field :lastname,class:"form-control"%>
      </div>
       </div>
    </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <div class="col-sm-6">
          <h4><label class="control-label col-sm-4" for="pwd">Full Name :</label></h4>
          <div class="col-sm-8 col-xs-12">
          <%= f.text_field :fullname ,class:"form-control"%>
        </div>
          </div>
         <div class="col-sm-6" >
           <h4><label class="control-label col-sm-4" for="name">Email :</label></h4>
            <div class="col-sm-8 col-xs-12">
              <%= f.text_field :email,class:"form-control"%>
            </div>
          </div>
        </div>
      </div>
    <div class="form-group">
          <h4><label class="control-label col-sm-2 " >Active :</label></h4>
      <div class="col-sm-8">
          <%= f.check_box :active , class:"check_box" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-10">
        <%= f.submit 'Submit', :class => "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>



